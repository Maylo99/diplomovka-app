<% content_for :page_header do %>
  <%= link_to new_bank_account_path(@account), method: :get, class: "btn btn-primary d-flex align-items-center justify-content-center" do %>
    <%= material_icon.shape(:add).outlined %>
    <%= "Nový bankový účet" %>
  <% end %>
<% end %>
<%= render 'shared/page_header', title: "Moje bankové účty" %>
<% content_for :page_body do %>
  <table class="table table-striped table-hover table-responsive ">
    <thead class="">
    <tr>
      <th scope="col"></th>
      <th scope="col">Názov bankového účtu</th>
      <th scope="col">IBAN</th>
      <th scope="col">Číslo účtu</th>
      <th scope="col" class="">Kód banky</th>
      <th scope="col" class="">Mena</th>
      <th scope="col" class="text-end">Možnosti</th>
    </tr>
    </thead>
    <tbody class="">
    <%c=0 %>
    <% @bank_accounts.each do |bank_account| %>
      <%= render "bank_account_table_row", bank_account: bank_account, account: @account,c: c  %>
      <%c+=1%>
    <% end %>
    </tbody>
  </table>
<% end %>
<%= render 'shared/page_body' %>