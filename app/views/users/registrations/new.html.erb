<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 rounded-4" style="width: 600px;">
    <div class="m-auto pt-3">
      <a href="/app/assets/builds" class="d-block mb-4 rounded">
        <%= image_tag("logo.jpeg", alt: 'Logo', width: 100, class: "rounded") %>
      </a>
    </div>
    <h1 class="text-center mb-4 text-primary">Ratio</h1>
    <span class="text-secondary text-center h4"> Aplikácia ktorá ti zjednoduší život</span>
    <hr class="w-75 mx-auto">
    <div class="card-body p-0">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group mb-3 w-75 mx-auto">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <%= render "shared/error_form_field", object: resource, field: :email %>
        </div>
        <div class="form-group mb-3 w-75 mx-auto">
          <%= f.label :password, "Heslo", class: "form-label" %>
          <% if @minimum_password_length %>
            <em><%= "(Minimálne #{@minimum_password_length} znakov)" %></em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <%= render "shared/error_form_field", object: resource, field: :password %>
        </div>
        <div class="form-group mb-3 w-75 mx-auto mb-5">
          <%= f.label :password_confirmation, "Potvrdenie hesla", class: "form-label" %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          <%= render "shared/error_form_field", object: resource, field: :password_confirmation %>
        </div>
        <div class="text-center">
          <%= f.submit "Zaregistruj sa zdarma", class: "btn btn-primary w-75 btn-lg mb-3" %>
        </div>
      <% end %>
      <div class=" mx-auto w-75 mb-3">
        <div class="text-center">
          <span class="text-secondary">Už máš účet vytvorený?</span> <%= link_to "Prihlás sa", new_session_path(resource_name) %>
        </div>
      </div>
    </div>
  </div>
</div>