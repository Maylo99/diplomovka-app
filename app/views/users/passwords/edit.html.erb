<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password" %><br/>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br/>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password" %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 rounded-4" style="width: 600px;">
    <div class="m-auto pt-3">
      <a href="/app/assets/builds" class="d-block mb-4 rounded">
        <%= image_tag("logo.jpeg", alt: 'Logo', width: 100, class: "rounded") %>
      </a>
    </div>
    <h1 class="text-center mb-4 text-primary">Vitajte späť v Ratio</h1>
    <div class="card-body p-0">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <div class="form-group mb-3 w-75 mx-auto">
          <%= f.label :password, "Heslo", class: "form-label" %>
          <% if @minimum_password_length %>
            <em><%= "(Minimálne #{@minimum_password_length} znakov)" %></em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class: "form-control" %>
          <%= render "shared/error_form_field", object: resource, field: :password %>
        </div>
        <div class="form-group mb-3 w-75 mx-auto">
          <%= f.label :password_confirmation, "Potvrdenie hesla" %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          <%= render "shared/error_form_field", object: resource, field: :password %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class=" mx-auto w-75 d-flex justify-content-between mb-5">
            <div class=" form-group">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Zapamätaj si ma", class: "form-check-label form-label" %>
            </div>
            <div class="text-center">
              <%= link_to "Zabudol si heslo?", new_password_path(resource_name), class: "text-secondary" %>
            </div>
          </div>
        <% end %>
        <div class="text-center">
          <%= f.submit "Pošli mi email", class: "btn btn-primary w-75 btn-lg mb-3" %>
        </div>
      <% end %>

      <div class=" mx-auto w-75 mb-3">
        <%= link_to "Návrat na prihásenie", new_user_registration_path %>
      </div>
    </div>
  </div>
</div>
</div>
