<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 rounded-4" style="width: 600px;">
    <div class="m-auto pt-3">
      <a href="/app/assets/builds" class="d-block mb-4 rounded">
        <%= image_tag("logo.jpeg", alt: 'Logo', width: 100, class: "rounded") %>
      </a>
    </div>
    <h1 class="text-center mb-4 text-primary">Vitajte späať v Ratio</h1>
    <div class="card-body p-0">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group mb-3 w-75 mx-auto">
          <%= f.label :email, "Email", class: "form-label" %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <%= render "shared/error_form_field", object: resource, field: :email %>
        </div>
        <div class="form-group mb-3 w-75 mx-auto">
          <%= f.label :password, "Heslo", class: "form-label" %><br/>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          <%= render "shared/error_form_field", object: resource, field: :password %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class=" mx-auto w-75 d-flex justify-content-between mb-5">
            <div class=" form-group">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Zapamätaj si ma", class: "form-check-label form-label" %>
            </div>
            <div class="text-center">
              <%= link_to "Zabudol si heslo?", new_password_path(resource_name), class: "text-secondary" %>
            </div>
          </div>
        <% end %>
        <div class="text-center">
          <%= f.submit "Prihlásiť sa", class: "btn btn-primary w-75 btn-lg mb-3" %>
        </div>
      <% end %>

      <div class=" mx-auto w-75 mb-3">
        <span class="text-secondary">Prvý krát u nás?</span> <%= link_to "Zaregistruj sa zdarma", new_user_registration_path %>
      </div>
      <div class=" mx-auto w-75 mb-3">
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <span class="text-secondary">Neprišiel ti potvrdzujúci email?</span> <%= link_to "Odoslať znova", new_confirmation_path(resource_name) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
