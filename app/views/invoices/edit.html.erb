<% content_for :page_header do %>
  <%= button_tag(type: 'submit', class: 'btn btn-sm btn-primary d-flex align-items-center justify-content-center text-dark', form: 'invoice_form') do %>
    <%= material_icon.shape(:save).outlined %>
    <span class="ms-2">Uložiť zmeny</span>
  <% end %>
<% end %>
<%= render 'shared/page_header', title: "Uprav faktúru: #{@invoice.number}" %>
<% content_for :page_body do %>
  <%= render "form", invoice: @invoice, url: send("#{controller_name.singularize}_path",@account,@invoice)%>
<% end %>
<%= render 'shared/page_body' %>
