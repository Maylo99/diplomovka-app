<!-- body -->
<div class="row" data-target="fields-for.fields">
  <div class="col">
    <%= form.text_field :name, data: { semantic_search_target: "expression",
                                       action: "input->semantic-search#search" }, class: 'form-control' %>
  </div>
  <div class="col">
    <%= form.text_field :quantity, class: 'form-control' %>
  </div>
  <div class="col">
    <%= form.text_field :measure_unit, class: 'form-control' %>
  </div>
  <div class="col">
    <%= form.text_field :unit_price, class: 'form-control' %>
  </div>
  <div class="col">
    <%#= :quantity * :unit_price %>
    <input type="text" class="form-control" placeholder="Suma">
  </div>
  <div class="col">
    <%= form.text_field :vat_rate, class: 'form-control' %>
  </div>

  <div class="col">
    <%#= :quantity * :unit_price * :vat_rate %>
    <input type="text" class="form-control" placeholder="Suma s DPH">
  </div>
  <div class="col">
    <%= form.check_box :_destroy, { data: { action: "form--fields-for#hide" } } %>
  </div>
  <div class="row">
    <div class="col-2">
      <label for="semantic" class="form-label">Automatické vyhľadanie účtu</label>
      <input type="checkbox" id="semantic" name="automatic" data-semantic-search-target="automatic" data-action="change->semantic-search#search"/>
    </div>
    <div class="automatic-group col-10">
      <%= form.label :testik, "Účet", class: "form-label" %>
      <%= form.select :testik, {}, {}, data: { semantic_search_target: "selectAccount" } %>
      <%= form.text_field :testik, class: "account_option", data: { semantic_search_target: "inputAccount" } %>
      <%= form.label :strana, "Strana účtu", class: "form-label" %>
      <%= form.text_field :strana, class: "account_side" %>
    </div>
  </div>

</div>
